<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtVoucherName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="fill"
        android:layout_column="1"
        android:layout_row="0"
        android:gravity="center_vertical"
        android:singleLine="true"
        tools:text="VoucherName"
        android:textSize="20dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:paddingRight="30dp" />

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/txtPerson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            tools:text="Received from"
            android:singleLine="true"
            android:textSize="16dp"
            android:textColor="#808080"
            android:textAppearance="?android:attr/textAppearanceMedium"/>

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical|right"
            tools:text="Received from"
            android:textSize="16dp"
            android:minWidth="150dp"
            android:textColor="#808080"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:paddingRight="15dp" />



        <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/flValidityStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/circle"
            android:foregroundGravity="center_vertical|center_horizontal"/>

        <ImageView
            android:id="@+id/ivValidityArchiveStatusTrue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_accept_green_small"/>

        <ImageView
            android:id="@+id/ivValidityArchiveStatusFalse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_cancel_red_small"/>

    </LinearLayout>



</LinearLayout>
